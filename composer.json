{
    "name": "canvas/exceptions",
    "type": "library",
    "description": "Error handler implementation for Canvas and Phalcon",
    "keywords": [
        "canvas",
        "exceptions"
    ],
    "homepage": "https://github.com/canvas/exceptions",
    "license": "MIT",
    "authors": [
        {
            "name": "Lenin Paulino",
            "email": "leninpaulinon@gmail.com",
            "homepage": "https://github.com/leninpaulino",
            "role": "Developer"
        }
    ],
    "require": {
        "php" : "~7.1"
    },
    "require-dev": {
        "phpunit/phpunit" : ">=7.0",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "Canvas\\Exceptions\\": "src"
        },
        "files": ["src/Helpers/helpers.php"]
    },
    "autoload-dev": {
        "psr-4": {
            "Canvas\\Exceptions\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs src tests",
        "fix-style": "phpcbf src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
